# =============================================================================
# IMSKOS Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase (Auth & Storage)
# Sign up at: https://supabase.com
# If missing: MOCK MODE - uses local filesystem and SQLite
# -----------------------------------------------------------------------------
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# -----------------------------------------------------------------------------
# Vercel (Deployment)
# -----------------------------------------------------------------------------
VERCEL_ENV=

# -----------------------------------------------------------------------------
# DataStax Astra DB (Vector Store)
# Sign up at: https://astra.datastax.com
# If missing: MOCK MODE - uses in-memory FAISS or local storage
# -----------------------------------------------------------------------------
ASTRA_DB_APPLICATION_TOKEN=
ASTRA_DB_ID=
ASTRA_DB_REGION=

# -----------------------------------------------------------------------------
# LLM Providers
# -----------------------------------------------------------------------------

# Groq (Primary LLM - Recommended)
# Sign up at: https://console.groq.com
# If missing: MOCK MODE - uses deterministic heuristic routing
GROQ_API_KEY=

# HuggingFace (Fallback Embeddings/LLM)
# Sign up at: https://huggingface.co/settings/tokens
# If missing: MOCK MODE - uses local sentence-transformers
HUGGINGFACE_API_KEY=

# OpenAI (Optional)
# Sign up at: https://platform.openai.com
OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# S3-Compatible Storage (Optional)
# Alternative to Supabase Storage
# -----------------------------------------------------------------------------
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=

# -----------------------------------------------------------------------------
# Redis / Upstash (Job Queue)
# Sign up at: https://upstash.com
# If missing: MOCK MODE - uses local Redis or in-memory queue
# -----------------------------------------------------------------------------
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------

# JWT Secret for API authentication
# Generate with: openssl rand -hex 32
JWT_SECRET=

# -----------------------------------------------------------------------------
# Monitoring & Notifications (Optional)
# -----------------------------------------------------------------------------

# Sentry DSN for error tracking
# Sign up at: https://sentry.io
SENTRY_DSN=

# SendGrid API Key for email notifications
# Sign up at: https://sendgrid.com
SENDGRID_API_KEY=

# Slack Webhook URL for alerts
SLACK_WEBHOOK_URL=
